<h1>log in</h1>

<div class="justify-content-center">
  <div class="col-md-6 col-md-offset-3">

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control form-margin' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control form-margin' %>
      </div>

      <div class="form-group">
        <%= f.submit "log in", class: "btn btn-primary btn-block form-margin" %>
      </div>
    <% end %>

    <div class="form-group form-margin">
      <p>New user? <%= link_to "Sign up now!", sign_up_path %></p>
    </div>
  </div>
</div>
